<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.firstgroup.movies.mapper.MoviesCommentMapper">
  
  <!-- 댓글리스트 전체 불러오기 -->
  <select id="commentList" resultType="com.firstgroup.movies.domain.MoviesCommentVO">
  select * from tbl_movies_comment where movbno = #{movBno}
  </select>
  
  <select id="getCommentWriter" resultType="com.firstgroup.movies.domain.MemberVO">
  
  <![CDATA[ 
	SELECT 
  		mem.id, mem.name, mem.nickname, mem.mem_imgno
		FROM 
  		tbl_member mem LEFT OUTER JOIN tbl_movies_comment com on mem.membno = com.membno
		WHERE com.movbno = #{movbno}
	]]>
  </select>
  
  
  
  </mapper>
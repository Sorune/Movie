<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.firstgroup.movies.mapper.ImgMapper">

	<resultMap type="com.firstgroup.movies.domain.ImgVO" id="imgMap">
		<id property="uuid" column="uuid"/>
		<result property="uploadpath" column="uploadpath"/>
		<result property="filename" column="filename"/>
		<result property="filetype" column="filetype"/>
		<result property="bno" column="bno"/>
	</resultMap>
	<!-- create -->
  	<insert id="insert" parameterType="map">
		insert into ${tblName} (uuid, uploadPath, fileName, fileType, bno)
		values(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})
	</insert>
  	<!-- delete -->
  	<delete id="delete" parameterType="map">
  		delete from ${tableName} where uuid = #{uuid}
  	</delete>
  	<!-- read -->
  	<select id="select" parameterType="map" resultType="com.firstgroup.movies.domain.MoviesAttachVO">
  		select * from ${tableName} where movBno = #{movBno}
  	</select>
</mapper>